{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB table for Contact records",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "ContactTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Sub": [
            "Contact-${env}",
            {
              "env": {
                "Ref": "env"
              }
            }
          ]
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "recordId",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "recordId",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": true
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "env"
            }
          },
          {
            "Key": "Project",
            "Value": "ContactManagement"
          }
        ]
      }
    }
  },
  "Outputs": {
    "ContactTableName": {
      "Value": {
        "Ref": "ContactTable"
      },
      "Export": {
        "Name": {
          "Fn::Sub": [
            "ContactTableName-${env}",
            {
              "env": {
                "Ref": "env"
              }
            }
          ]
        }
      }
    },
    "ContactTableArn": {
      "Value": {
        "Fn::GetAtt": [
          "ContactTable",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": [
            "ContactTableArn-${env}",
            {
              "env": {
                "Ref": "env"
              }
            }
          ]
        }
      }
    }
  }
}
